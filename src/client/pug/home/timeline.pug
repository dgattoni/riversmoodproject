extends ../layouts/primary.pug

block main
  .Section
    .Container
      .Section.timeline--waves
        .timeline__list
          ul
            li
              p.card__rivername
              .card.card--noBackground
                h1 #{riverName} River
            each card,index in cards
              li
                p
                .card.card-1
                  span.card__date
                    | #{card.date} | #{card.type}
                  span.card__title
                    | #{card.title}
                    span.card__emoticon
                      | #{card.emoji}
                  span.card__body
                    | #{card.excerpt}
                  span.card__footer
                    a.card__link(href=`${card.floodmap}`, target="_blank") View Floodmap NASA at this date
                    a.card__link(href=`${card.source}`, target="_blank") View Data Source
  .Section
    a.link-home(href="/") &larr; Back to Home
